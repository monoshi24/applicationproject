<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controllers.FuelPurchaseController"
            prefHeight="400.0" prefWidth="500.0" style="-fx-background-color: #f0f4f8;">
    <VBox alignment="CENTER" spacing="15.0" AnchorPane.topAnchor="20.0" AnchorPane.bottomAnchor="20.0"
          AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0">
          
        <Label text="â›½ Fuel Purchase" style="-fx-font-size: 20px; -fx-font-weight: bold;" />

        <ComboBox fx:id="fuelTypeCombo" promptText="Select Fuel Type" prefWidth="200.0" />
        
        <TextField fx:id="litresField" promptText="Enter litres" />
        
        <Button fx:id="calculateBtn" text="Calculate Price" onAction="#handleCalculate"
                style="-fx-background-color: #1E88E5; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;" />
        
        <Label fx:id="priceLabel" text="Total Price: R0.00" style="-fx-font-size: 16px;" />
        
        <Button fx:id="nextBtn" text="Next"
                style="-fx-background-color: #43A047; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;" />
    </VBox>
</AnchorPane>
