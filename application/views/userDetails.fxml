<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="500.0" prefWidth="600.0" style="-fx-background-color: #f0f4f8;" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/24.0.1" fx:controller="application.controllers.UserDetailsController">
    <VBox alignment="CENTER" layoutX="50.0" layoutY="30.0" spacing="15.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
        <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="ðŸš— Enter Your Details" />
        
        <TextField fx:id="fullNameField" promptText="Full Name" />
        <TextField fx:id="surnameField" promptText="Surname" />
        <TextField fx:id="idField" promptText="ID Number" />
        <TextField fx:id="addressField" promptText="Home Address" />
        <TextField fx:id="carRegField" promptText="Car Registration Number" />

        <HBox alignment="CENTER" spacing="10">
            <Button fx:id="uploadButton" onAction="#handleUploadImage" style="-fx-background-color: #1E88E5; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;" text="Upload Car Image">
            <cursor>
               <Cursor fx:constant="HAND" />
            </cursor></Button>
            <Label fx:id="imageLabel" text="No image selected." />
        </HBox>

        <ImageView fx:id="imageView" fitHeight="150" fitWidth="200" pickOnBounds="true" preserveRatio="true" style="-fx-border-color: #888; -fx-border-width: 2; -fx-background-color: white;" />

        <Button fx:id="submitButton" onAction="#handleSubmit" style="-fx-background-color: #43A047; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;" text="Submit">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor></Button>
    </VBox>
</AnchorPane>
