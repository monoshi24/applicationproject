<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="410.0" prefWidth="659.0" style="-fx-background-size: cover; -fx-background-color: linear-gradient(to bottom, #e0eafc, #cfdef3); -fx-background-position: center center; -fx-background-repeat: no-repeat;" stylesheets="@../../styles/style.css" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/24.0.1" fx:controller="application.controllers.ForgotPasswordController">

    <center>
        <VBox alignment="CENTER" spacing="15" style="-fx-background-size: cover; -fx-background-color: linear-gradient(to bottom, #e0eafc, #cfdef3); -fx-background-position: center center; -fx-background-repeat: no-repeat;">
            <Label style="-fx-font-size: 28px; -fx-font-weight: bold;" text="Forgot Password">
            <font>
               <Font size="28.0" />
            </font></Label>
            <Label text="Please enter your email to reset your password">
            <font>
               <Font name="System Bold" size="15.0" />
            </font></Label>

            <TextField fx:id="emailField" prefHeight="26.0" prefWidth="242.0" promptText="Email Address" />

            <Button id="resetLinkButton" onAction="#handleReset" style="-fx-background-color: green; -fx-border-color: green;" text="Send Reset Link" textFill="#fcf7f7" underline="true">
            <cursor>
               <Cursor fx:constant="HAND" />
            </cursor></Button>
            <Button id="backButton" onAction="#handleBack" style="-fx-background-color: green; -fx-border-color: green;" text="Back to Login" textFill="#fcf7f7" underline="true">
            <cursor>
               <Cursor fx:constant="HAND" />
            </cursor></Button>
        </VBox>
    </center>

    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

</BorderPane>
