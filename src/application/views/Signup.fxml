<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.Cursor?>

<VBox alignment="CENTER" prefHeight="450.0" prefWidth="640.0" spacing="10.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controllers.SignupController">
    <children>
        <AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="450.0" prefWidth="640.0" style="-fx-background-color: linear-gradient(to bottom, #e0eafc, #cfdef3);">
            <children>
                <Label alignment="CENTER" layoutX="221.0" layoutY="30.0" prefHeight="36.0" prefWidth="168.0" style="-fx-font-size: 16px; -fx-font-weight: bold;" text="User Registration" textAlignment="CENTER" />
                
                <VBox layoutX="200.0" layoutY="80.0" prefWidth="240.0" spacing="10.0">
                    <children>
                        <Label style="-fx-font-size: 14px;" text="Name" />
                        <TextField fx:id="nameField" promptText="Enter your name">
                            <cursor>
                                <Cursor fx:constant="HAND" />
                            </cursor>
                        </TextField>

                        <Label style="-fx-font-size: 14px;" text="Surname" />
                        <TextField fx:id="surnameField" promptText="Enter your surname">
                            <cursor>
                                <Cursor fx:constant="HAND" />
                            </cursor>
                        </TextField>

                        <Label style="-fx-font-size: 14px;" text="Password" />
                        <PasswordField fx:id="passwordField" promptText="Enter your password">
                            <cursor>
                                <Cursor fx:constant="HAND" />
                            </cursor>
                        </PasswordField>

                        <Label style="-fx-font-size: 14px;" text="ID Number" />
                        <TextField fx:id="idNumberField" promptText="Enter your 13-digit ID number">
                            <cursor>
                                <Cursor fx:constant="HAND" />
                            </cursor>
                        </TextField>

                        <Label style="-fx-font-size: 14px;" text="Home Address" />
                        <TextField fx:id="addressField" promptText="Enter your home address">
                            <cursor>
                                <Cursor fx:constant="HAND" />
                            </cursor>
                        </TextField>

                        <Label style="-fx-font-size: 14px;" text="Car Registration Number" />
                        <TextField fx:id="carRegField" promptText="Enter your car registration (e.g., ABC 123 GP)">
                            <cursor>
                                <Cursor fx:constant="HAND" />
                            </cursor>
                        </TextField>

                        <HBox spacing="10.0" alignment="CENTER">
                            <children>
                                <Button fx:id="btnRegister" mnemonicParsing="false" onAction="#handleRegister" style="-fx-font-size: 14px;" text="Register">
                                    <cursor>
                                        <Cursor fx:constant="HAND" />
                                    </cursor>
                                </Button>
                                <Button fx:id="btnNext" mnemonicParsing="false" onAction="#handleNext" style="-fx-font-size: 14px;" text="Next">
                                    <cursor>
                                        <Cursor fx:constant="HAND" />
                                    </cursor>
                                </Button>
                            </children>
                        </HBox>
                        <Label fx:id="lblInform" style="-fx-font-size: 14px;" textFill="RED" />
                    </children>
                </VBox>
            </children>
        </AnchorPane>
    </children>
</VBox>